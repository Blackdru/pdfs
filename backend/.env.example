# Database Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Server Configuration
PORT=5000
NODE_ENV=development

# AI Features Configuration
ENABLE_AI_FEATURES=true
ENABLE_OCR=true
ENABLE_SUMMARIZATION=true
ENABLE_CHAT_PDF=true

# OpenAI Configuration (Optional - for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# OpenRouter Configuration (Alternative to OpenAI - Free tier available)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# AI Model Configuration
AI_MODEL=gpt-3.5-turbo
EMBEDDING_MODEL=text-embedding-ada-002

# OCR Configuration
OCR_LANGUAGES=eng
OCR_CONFIDENCE_THRESHOLD=0.7

# Stripe Configuration (for subscriptions)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Stripe Price IDs
STRIPE_PRICE_ID_PRO=price_pro_monthly
STRIPE_PRICE_ID_PREMIUM=price_premium_monthly

# File Upload Configuration
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,gif,bmp,tiff

# Security Configuration
JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=http://localhost:3000

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Monitoring
SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
ENABLE_BATCH_PROCESSING=true
ENABLE_ADVANCED_COMPRESSION=true
ENABLE_WATERMARKING=true
ENABLE_BOOKMARKS=true
ENABLE_PAGE_NUMBERING=true

# Development Configuration
DEBUG=true
VERBOSE_LOGGING=false